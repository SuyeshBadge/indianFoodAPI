<div class='pt-24'>
  <div class='w-5/6 mx-auto rounded'>
    <div class='flex flex-row justify-center'>

      <div class='flex flex-col text-white'>
        <div class='bg-gray-700 m-4 px-10 rounded'><div>
            <h1 class='m-4 text-center'>Update Details</h1>
            <form
              action='#'
              method='post'
              class='updateDetails flex flex-col gap-2'
            >
              <label for='name'>Name</label>
              <input
                type='text'
                placeholder='Change Name'
                class='p-2 name rounded text-black'
                value='{{@root.user.name}}'
              />

              <label for='email'>Email</label>

              <input
                type='text'
                placeholder='Change Email'
                class='p-2 email rounded text-black'
                value='{{@root.user.email}}'
              />

              <button type='submit' class='bg-gray-900 mx-8 my-5 p-2 rounded'>
                Submit
              </button>
            </form>
          </div></div>
        <div class='bg-gray-700 m-4 px-10 rounded'><div>
            <h1 class='m-4 text-center'>Update Password</h1>
            <form
              action='#'
              method='post'
              class='changePass flex flex-col gap-2'
            >
              <label for='name'>Current Password</label>
              <input
                type='password'
                placeholder='Current Password'
                class='p-2 passwordCurrent rounded text-black'
              />
              <label for='name'>New Password</label>
              <input
                type='password'
                placeholder='New Password'
                class='p-2 password rounded text-black'
              />
              <label for='name'>Confirm Password</label>
              <input
                type='password'
                placeholder='Confirm Password'
                class='p-2 passwordConfirm rounded text-black'
              />

              <button type='submit' class='bg-gray-900 mx-8 my-5 p-3 rounded'>
                Submit
              </button>
            </form>
          </div></div>
      </div>
      <div class='flex flex-col gap-6 bg-gray-700 m-4 px-10 rounded text-'>
        <h1 class='m-4 text-center text-4xl font-sans'>Profile </h1>
        <img class='rounded-full' src='img/male-avatar.png' alt='' srcset='' />
        <div>
          <h1 class='text-3xl'>{{@root.user.name}}</h1>
          <h1 class='text-3xl'>{{@root.user.email}}</h1>
        </div>
      </div>
    </div>

  </div>
</div>