<div class='flex py-24 justify-center'>
  <div class='bg-gray-600 w-2/6 rounded'>
    <div>
      <h1 class='text-center font-bold text-3xl p-4'>
        Reset Password
      </h1>
    </div>
    <form class="resetPass" >
        <div class='flex flex-col justify-center m-12 gap-10 text-black'>
        <div class='flex flex-col'>
            <label for='password'>Password</label>
            <input
            class='h-8 rounded p-2 text-black'
            type='password'
            name='password'
            id='password'
                required
            />
        </div>
        <div class='flex flex-col'>
            <label for='passwordConfirm'>Confirm Password</label>
            <input
            class='h-8 rounded p-2 text-black'
            type='password'
            name='passwordConfirm'
            id='passwordConfirm'
                required
            />
        </div>

        <button type="submit" class='w-20 mx-auto p-2 rounded bg-gray-700 text-white'>Submit</button>
        </div>
    </div>
  </form>
</div>
<input type="hidden" name="resettoken" id="resettoken" value="{{resettoken}}">
